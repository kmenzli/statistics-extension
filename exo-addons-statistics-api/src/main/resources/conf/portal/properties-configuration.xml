<configuration
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.exoplaform.org/xml/ns/kernel_1_2.xsd http://www.exoplaform.org/xml/ns/kernel_1_2.xsd"
        xmlns="http://www.exoplaform.org/xml/ns/kernel_1_2.xsd">

    <component>
        <key>StatisticsDBManagementProperty</key>
        <type>org.exoplatform.container.PropertyConfigurator</type>
        <init-params>
            <properties-param >
                <name>properties</name>
                <description>Statistics Database Parameters</description>
                <property name="statistics.database.server.type" value="${statistics.database.server.type.type:embed}" />
                <property name="statistics.database.server.host" value="${statistics.database.server.host:127.0.0.1}" />
                <property name="statistics.database.server.port" value="${statistics.database.server.port:27777}" />
                <property name="statistics.database.server.name" value="${statistics.database.server.name:statistics}" />
                <property name="statistics.database.server.authentication" value="${statistics.database.server.authentication:false}" />
                <property name="statistics.database.server.user" value="${statistics.database.server.user:admin}" />
                <property name="statistics.database.server.password" value="${statistics.database.server.password:admin}" />
            </properties-param>
            <properties-param profiles="cluster,cluster-index-local">
                <name>properties</name>
                <description>Filter used to notify caches</description>
                <property name="statistics.database.server.type" value="${statistics.database.server.type.type:embed}" />
                <property name="statistics.database.server.host" value="${statistics.database.server.host:127.0.0.1}" />
                <property name="statistics.database.server.port" value="${statistics.database.server.port:27777}" />
                <property name="statistics.database.server.name" value="${statistics.database.server.name:statistics}" />
                <property name="statistics.database.server.authentication" value="${statistics.database.server.authentication:false}" />
                <property name="statistics.database.server.user" value="${statistics.database.server.user:admin}" />
                <property name="statistics.database.server.password" value="${statistics.database.server.password:admin}" />
            </properties-param>
        </init-params>
    </component>
</configuration>